{
  "profiles": {
    "http": {
      "commandName": "Project",
      "launchBrowser": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "http://localhost:5193"
    },
    "https": {
      "commandName": "Project",
      "launchBrowser": true,
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "https://localhost:7180;http://localhost:5193"
    },
    "Container (Dockerfile)": {
      // change to Project so that `dotnet run`/`dotnet watch` can start the app
      // without trying to invoke the Visual Studio Docker tooling.
      "commandName": "Project",
      "launchBrowser": false,
      "launchUrl": "{Scheme}://{ServiceHost}:{ServicePort}",
      "environmentVariables": {
        "ASPNETCORE_HTTP_PORTS": "8080",
        // Bind to all interfaces inside the container so the host port mapping
        // (docker run -p 8080:8080) can reach the app.  Using `http://+:8080`
        // ensures Kestrel listens on 0.0.0.0/::.
        "ASPNETCORE_URLS": "http://+:8080"
      },
      "publishAllPorts": true,
      "useSSL": false
    }
  },
  "$schema": "https://json.schemastore.org/launchsettings.json"
}